@model Loja.UI.Models.Home.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                @* Inicio dos card's *@
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                        <div class="card comp-card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h6 class="m-b-25">Quantidade de Pedidos</h6>
                                        <h3 class="f-w-700 text-c-blue">30 Pedidos</h3>
                                        <p class="m-b-0">01 Junho - 04 Novembro (2020)</p>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-eye bg-c-blue"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                        <div class="card comp-card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h6 class="m-b-25">Quantidade de Pré-pedidos</h6>
                                        <h3 class="f-w-700 text-c-blue">50 Pré-pedidos</h3>
                                        <p class="m-b-0">01 Setembro - 04 Novembro (2020)</p>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-eye bg-c-blue"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                        <div class="card comp-card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h6 class="m-b-25">Valor total de pedidos</h6>
                                        <h3 class="f-w-700 text-c-blue">130.999,00</h3>
                                        <p class="m-b-0">01 Setembro - 04 Novembro (2020)</p>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-eye bg-c-blue"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <div class="card">
                            <div class="card-block p-b-0">
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-3">
                                        <div class="col-xl-12 col-lg-12 p-0">
                                            <h5 style="font-weight:600">Busca de Pedido</h5>
                                        </div>
                                        <div class="form-group col-xl-12 mt-2 px-0">
                                            <label class="col-form-label pr-1" for="pedido">Pedido</label>
                                            <input class="form-control mr-2" type="text" id="pedido" name="pedido"
                                                   placeholder="Informe o pedido" />
                                        </div>
                                        <div>
                                            <button class="btn btn-primary btn-sm" style="float:right">Buscar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <div class="card">
                            <div class="card-block p-b-0">
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-3">
                                        <div class="col-xl-12 col-lg-12 p-0">
                                            <h5 style="font-weight:600">Busca de Pré-pedido</h5>
                                        </div>
                                        <div class="form-group col-xl-12 mt-2 px-0">
                                            <label class="col-form-label pr-1" for="pedido">Pré-pedido</label>
                                            <input class="form-control mr-2" type="text" id="pre-pedido" name="pre-pedido"
                                                   placeholder="Informe o pré-pedido" />
                                        </div>
                                        <div>
                                            <button class="btn btn-primary btn-sm" style="float:right">Buscar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

