
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="feather icon-user bg-c-blue"></i>
                <div class="d-inline">
                    <h5>Cadastro Cliente</h5>
                    <span>Informações do cliente</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Cliente</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="pcoded-inner-content" style="min-height: 75vh;">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-md-12 col-xl-12">
                        <div class="card" style="min-height:calc(100vh - 250px)">
                            <div class="card-header">
                            </div>
                            <div class="card-block">
                                @using (Html.BeginForm("ValidarCliente", "Cliente", FormMethod.Post,
                                   new
                                   {
                                       enctype = "multipart/form-data",
                                       onsubmit = "return ValidarCpfCnpj()",
                                       id = "formulario"
                                   }))
                                {
                                    <div class="d-inline">
                                        <div class="form-group row">
                                            <label class="col-form-label col-xl-1 col-lg-1">CPF / CNPJ</label>
                                            <div class="col-xl-6 col-lg-6">
                                                <input type="text" class="form-control" name="cpf_cnpj" id="cpf_cnpj" placeholder="Informe CPF/CNPJ">
                                                <span class="messages"></span>
                                            </div>
                                            <button class="btn btn-md btn-primary waves-effect waves-light" 
                                               type="submit" onclick="$('#formulario').submit()">Pesquisar</button>

                                        </div>

                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    requirejs(["Views/Cliente/Index"], function (util) {

    });
</script>