<script>

    function testeModal() {
        let Modalelem = document.querySelector('.modal');
        let instanceModal = M.Modal.init(Modalelem);
        instanceModal.open();
    };
</script>

@if (Model != null)
{
    @if (Model.Fabricante != null)
    {
        <h5>
            Lista de Produtos -
            <span style="font-weight: bold">
                @Model.Fabricante
            </span>
        </h5>


        <partial name="~/Views/Shared/Datatables.cshtml" />

        <script>
            $(document).ready(function () {
                intiDatatables('#tabela', {
                    columnDefs: [
                        { type: "moeda", targets: 2 }
                    ]
                });
            });
        </script>


        <table id="tabela" style="display: none;">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Descrição</th>
                    <th class="right-align">Preço</th>
                </tr>
            </thead>


            <tbody>

                @foreach (var item in Model.LstProdutos)
                {
                    <tr>
                        <td>@item.Produto</td>
                        <td>@item.Descricao</td>
                        <td class="right-align">@Loja.Bll.Util.Util.FormataMoeda(item.Preco)</td>
                    </tr>

                }
            </tbody>

        </table>
        <div class="row" style="margin-left:7%">
            <div class="row col xl12 l12 m12 s12">
                <button class="waves-effect waves-light btn-small"
                        style="margin-top:2.5%; float:right"
                        onclick="Imprimir()">
                    Imprimir
                </button>
            </div>
        </div>
    }
    else
    {
        <body onload="testeModal()">

            @*<a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a>*@
            <div id="modal1" class="modal" style="width:30%;">
                <div class="modal-content">
                    <h4>Error</h4>
                    <p>Fabricante não encontrado!!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" href="#!" class="modal-close waves-effect waves-green btn">OK</button>
                </div>
            </div>
        </body>
    }
}




