

@{
    ViewData["Title"] = "ConsultaListaPrecos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section ScriptsDiretos{
    <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js"></script>

    @*<link rel="stylesheet" type="text/css" href="~/lib/datatables-materialize/dataTables.materialize.css" />
        <script type="text/javascript" src="~/lib/datatables-materialize/dataTables.materialize.js"></script>*@
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="fa fa-search bg-c-blue"></i>
                <div class="d-inline">
                    <h5>Consulta de Preços</h5>
                    <span>Consulta lista de preços por fabricante</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#">Consulta lista de preços</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="pcoded-inner-content pb-0" style="min-height: 75vh;">
    <div class="main-body">
        <div class="page-wrapper pb-0">
            <div class="page-body">
                <div class="row">
                    <div class="col-md-12 col-xl-12">
                        <div class="card mb-0" style="min-height: 75vh;">
                            <div class="page-header card mb-4">
                                <div class="content col-xl-12 col-lg-12 px-0">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 px-0">
                                        @using (Html.BeginForm("BuscaListaProdutosFabricante", "Produtos", FormMethod.Get))
                                        {
                                            <div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 px-0">
                                                <label class="col-form-label" for="fabricante">Fabricante</label>
                                                <input id="fabricante" name="fabricante" type="text"
                                                       class="form-control col-xl-6 col-lg-6 col-md-6 col-sm-12 mb-2"
                                                       style="display:inline-block"/>
                                                <button class="btn btn-primary col-xl-2 col-lg-3 col-md-3 col-sm-12 mt-0"
                                                        type="submit"
                                                        style="margin-top:2.5%">
                                                    <i class="fa fa-search"></i>
                                                    Pesquisar
                                                </button>
                                            </div>
                                        }
                                    </div>
                                    <partial name="~/Views/Produtos/BuscaListaProdutosFabricante.cshtml" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






