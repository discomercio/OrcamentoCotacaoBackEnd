@model Loja.Bll.Bll.AcessoBll.UsuarioLogado

<style>
    .menudesabilitado {
        cursor: not-allowed;
    }
</style>

<ul class="pcoded-item pcoded-left-item">
    @*Pedidos*@
    <li class="pcoded-hasmenu">
        <a href="javascript:void(0)" class="waves-effect waves-dark">
            <span class="pcoded-micon"><i class="feather icon-home"></i></span>
            <span class="pcoded-mtext">Pedidos</span>
        </a>
        <ul class="pcoded-submenu">
            <li>
                <a class="menudesabilitado waves-effect waves-dark" href="#!">Análise de Pré Pedidos</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Cliente")" class="waves-effect waves-dark">Novo Pedido</a>
            </li>
            <li>
                <a href="@Url.Action("CancelamentoAutomatico", "Pedido")" class="waves-effect waves-dark"><span>Cancelamento Automático</span></a>
            </li>
            <li>
                <a class="menudesabilitado waves-effect waves-dark" href="#!">Indicadores</a>
            </li>
            <li>
                <a class="menudesabilitado waves-effect waves-dark" href="#!">Consulta Pedido</a>
            </li>
            <li>
