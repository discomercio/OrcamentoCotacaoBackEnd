<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Loja.UI</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@
    <environment include="Development">
        <link rel="stylesheet" href="~/css/materialize.css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/personalizado.css?rnd=4" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/materialize.css" />
        <link href="https://fonts.googleapis.com/icon?family=Materialize+Icons" rel="stylesheet" />
        <link href="~/css/personalizado.css" rel="stylesheet" />
    </environment>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>*@
    <script src="~/js/initiComponentesMat.js"></script>
    <script src="~/js/materialize.js"></script>
    <script src="~/js/Util.js"></script>
    @RenderSection("ScriptsDiretos", required: false)

    <script src="~/lib/require.js"></script>
    @{
        string baseurl = "/scriptsJsMin";
#if DEBUG
        baseurl = "/scriptsJs";
#endif
    }
    <script>
        requirejs.config({
            //baseUrl: '/jsts',
            //baseUrl: '/jstsmin',
            baseUrl: "@baseurl",
            paths: {
                jquery: '/lib/jquery/dist/jquery.min'
            }
        });
        //requirejs(['app'], function (app) { });
    </script>
    @RenderSection("Scripts", required: false)
</head>

<body>
    <header>
        <div class="navbar navbar-fixed">
            <nav class="navbar">
                <span class="right" style="margin-right: 10px">
                    @*<a class="material-icons">notifications</a>*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span style="    margin-right: 20px;
    font-size: 20px;">
                            Olá @User.Identity.Name
                        </span>
                        <a href="~/Acesso/Logout" class="material-icons" title="Logout" style="vertical-align: text-bottom;     margin-right: 20px;">
                            exit_to_app
                        </a>
                    }
                    else
                    {
                        //não temos botão de ologin pq já está na pagina de login - mas precisa para outras páginas, que eventualemte não tenham a proteção, como a home
                        if (!(ViewBag.PaginaDeLogin ?? false))
                        {
                            <a href="~/Acesso/Login" class="btn">Login</a>
                        }
                    }
                </span>
            </nav>
        </div>

    </header>
    <div class="col s12" id="corpo">
        @if (User.Identity.IsAuthenticated)
        {
            <ul class="sidenav sidenav-fixed" style="width:18%; white-space:nowrap">
                <li>
                    <ul class="collapsible">
                        <li>
                            <div class="collapsible-header">Pedidos</div>
                            <ul class="collapsible-body">
                                <li>
                                    <a href="#!">Análise de Pré Pedidos</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Cliente")">Novo Pedido</a>
                                </li>
                                <li>
                                    <a href="#!"><span>Cancelamento Automático</span></a>
                                </li>
                                <li>
                                    <a href="#!">Indicadores</a>
                                </li>
                                <li>
                                    <a href="#!">Consulta Pedido</a>
                                </li>
                                <li>
                                    <a href="#!">Consulta Pré Pedido</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <div class="collapsible-header">Produtos</div>
                            <ul class="collapsible-body">
                                <li>
                                    <a href="@Url.Action("Index", "Produtos")">Consulta Lista de Preços</a>
                                </li>
                                <li>
                                    <a href="#!">Consulta Custo Financeiro</a>
                                </li>
                                <li>
                                    <a href="#!">Indicadores</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <div class="collapsible-header">Relatórios</div>
                            <ul class="collapsible-body">
                                <li>
                                    <div class="input-field col s3">
                                        <input id="pesquisa" type="text" />
                                        <label for="pesquisa">Pesquisar</label>
                                    </div>
                                </li>
                                <li>
                                    <a href="#!">Pedidos Indicadores</a>
                                </li>
                                <li>
                                    <a href="#!">Faturamento</a>
                                </li>
                                <li>
                                    <a href="#!">Vendas</a>
                                </li>
                                <li>
                                    <a href="#!">Vendas com Desc. Superior</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        }


        @{
            var estilos = "corpo";
            @if ((ViewBag.PaginaDeLogin ?? false))
            {
                estilos = " corpologin";
            }
        }
        <main role="main" class="container @estilos">
            @RenderBody()
        </main>
        <partial name="~/Views/Shared/Error.cshtml" />
    </div>


</body>
</html>
