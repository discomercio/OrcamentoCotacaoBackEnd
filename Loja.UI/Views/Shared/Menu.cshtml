            <div class="menuhome collapsible-header" onclick="javascript:window.location = '@Url.Action("Index", "Home")'" title="Home">
                <a href="@Url.Action("Index", "Home")" title="Home" class="show-on-medium-and-down"><i class="material-icons">home</i></a>
